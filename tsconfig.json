{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "inlineSourceMap": true
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/"]
}